<%= simple_form_for(@weet) do |f| %>
  <%= f.error_notification %>
    <div class="field">
      <div class="control">
        <%= f.input :weet, label: "Weet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new weet...", autofocus: true %>
      </div>
    </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>